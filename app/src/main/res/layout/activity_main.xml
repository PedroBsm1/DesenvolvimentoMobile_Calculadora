<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/black"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/calculo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="3+4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center"
            android:layout_marginTop="-50dp"
            android:textSize="35sp"
            android:textColor="@color/light_gray"
            />
        <TextView
            android:id="@+id/resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calculo"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textColor="@color/white"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ac"
                android:text="AC"
                android:background="@drawable/button_background_1"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ce"
                android:text="CE"
                android:background="@drawable/button_background_1"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/porcentagem"
                android:text="%"
                android:background="@drawable/button_background_1"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/divisao"
                android:text="/"
                android:background="@drawable/button_background_2"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />

        </TableRow>

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sete"
                android:text="7"
                android:background="@drawable/button_background_3"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/oito"
                android:text="8"
                android:background="@drawable/button_background_3"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nove"
                android:text="9"
                android:background="@drawable/button_background_3"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/multiplicacao"
                android:text="X"
                android:background="@drawable/button_background_2"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />

        </TableRow>

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/quatro"
                android:text="4"
                android:background="@drawable/button_background_3"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cinco"
                android:text="5"
                android:background="@drawable/button_background_3"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/seis"
                android:text="6"
                android:background="@drawable/button_background_3"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/menos"
                android:text="-"
                android:background="@drawable/button_background_2"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />

        </TableRow>

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/um"
                android:text="1"
                android:background="@drawable/button_background_3"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dois"
                android:text="2"
                android:background="@drawable/button_background_3"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tres"
                android:text="3"
                android:background="@drawable/button_background_3"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mais"
                android:text="+"
                android:background="@drawable/button_background_2"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />

        </TableRow>

        <TableRow>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/zero"
                android:text="0"
                android:background="@drawable/button_background_3"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="93dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ponto"
                android:text="."
                android:background="@drawable/button_background_3"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_height="93dp"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/igual"
                android:text="="
                android:background="@drawable/button_background_2"
                android:layout_margin="5dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_height="93dp"
                />

        </TableRow>

    </TableLayout>

</LinearLayout>